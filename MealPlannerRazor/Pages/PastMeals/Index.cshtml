@page
@model MealPlannerRazor.Pages.PastMeals.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Past Recipes</h1>

<p>
    
</p>
<table class="table">
    <thead>
        <tr>
        
            <th>
                @Html.DisplayNameFor(model => model.PastRecipesModel2[0].Recipe.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PastRecipesModel2[0].Pastmeal.Date)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PastRecipesModel2)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Recipe.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pastmeal.Date)
            </td>

            <td> |
                <a asp-page="./Delete" asp-route-id="@item.Pastmeal.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
